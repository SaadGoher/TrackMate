<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/zxing_barcode_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.journeyapps.barcodescanner.ViewfinderView
        android:id="@+id/zxing_viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zxing_possible_result_points="@color/primary_light"
        app:zxing_result_view="@color/secondary_light"
        app:zxing_viewfinder_laser="@color/secondary_light"
        app:zxing_viewfinder_mask="@color/black_opacity_45" 
        xmlns:app="http://schemas.android.com/apk/res-auto" />

    <TextView
        android:id="@+id/zxing_status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/primary_light"
        android:text="Scan a TrackMate QR code"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="50dp"
        android:gravity="center" />

</FrameLayout>
