<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Privacy Policy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Last Updated Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Updated: November 1, 2023"
                android:textSize="14sp"
                android:textStyle="italic"
                android:layout_marginBottom="16dp" />

            <!-- Navigation Tabs -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:tabSelectedTextColor="@color/primary_dark"
                app:tabIndicatorColor="@color/primary_dark">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms of Service" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy" />

            </com.google.android.material.tabs.TabLayout>

            <!-- Terms/Privacy Content -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginBottom="16dp" />

            <!-- Accept Terms Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/accept_terms_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I Accept the Terms and Privacy Policy"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp"
                android:layout_marginTop="8dp" />
                
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>