<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/policyToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_dark"
        android:title="Policies"
        android:titleTextColor="@color/black"
        app:layout_scrollFlags="scroll|enterAlways" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Section Title -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <!-- Policy Content -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We value your privacy. Your data will not be shared with unauthorized parties and will only be used for app functionality."
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Section Title -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms of Service"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <!-- Terms Content -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By using this app, you agree to abide by our terms and conditions. Unauthorized use or reproduction is prohibited."
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Section Title -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Usage Policy"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <!-- Data Usage Content -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data collected includes app usage statistics and input for improving services. Data will be securely stored."
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
