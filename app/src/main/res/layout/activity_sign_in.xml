<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:id="@+id/main"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <!-- Illustration -->
        <ImageView
            android:id="@+id/illustration"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/illustration"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Welcome back!"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- Subheading -->
        <TextView
            android:id="@+id/subheading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_text"
            android:layout_centerHorizontal="true"
            android:text="Log in to your existant account of Q Allure"
            android:textSize="14sp"
            android:textColor="#808080" />

        <!-- Email Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subheading_text"
            android:layout_marginTop="24dp"
            app:hintTextColor="@color/gray"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jonewilliams@gmail.com"
                android:textColor="@color/black"
                android:drawableStart="@drawable/baseline_alternate_email_24"
                android:inputType="textEmailAddress"
                android:layout_margin="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_input_layout"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:drawableStart="@drawable/ic_password"
                android:layout_margin="10dp"

                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_input_layout"
            android:layout_alignParentEnd="true"
            android:text="Forgot Password?"
            android:textColor="#808080"
            android:textSize="12sp" />

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/forgot_password"
            android:layout_marginTop="16dp"
            android:text="LOG IN"
            android:textAllCaps="true"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            app:backgroundTint="@color/primary_light"
            app:cornerRadius="12dp" />

        <!-- OR Text -->
        <TextView
            android:id="@+id/or_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Or connect using"
            android:textColor="#808080"
            android:textSize="12sp" />

        <!-- Social Buttons -->
        <LinearLayout
            android:id="@+id/social_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/or_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Facebook -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/facebook_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                app:iconSize="20dp"
                app:icon="@drawable/ic_facebook"
                app:backgroundTint="@color/primary_light"
                android:textColor="@color/white" />

            <!-- Google -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/google_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Google"
                app:icon="@drawable/ic_google"
                app:iconSize="20dp"
                app:backgroundTint="@color/red"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Sign Up -->
        <TextView
            android:id="@+id/sign_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/social_buttons"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Don't have an account? Sign Up"
            android:textColor="@color/primary_light"
            android:textSize="14sp"
            android:paddingBottom="100dp"
            />

    </RelativeLayout>
</ScrollView>
